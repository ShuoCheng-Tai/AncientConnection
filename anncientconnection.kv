<ACGrid>:

    test2: test2
    test1: test1
    dna: dna

    BoxLayout:
        orientation: 'vertical'
        size: root.width - 200, root.height -100
        pos: 100, 20

        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                rectangle: self.x, self.y, self.width, self.height
                width: 1
                

        FloatLayout:
            size_hint_y: 0.15

            canvas:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1

            Button:
                text: "Submit"
                size_hint: (.15, 1)

                pos_hint: {'center_x': 0.9, 'center_y': 0.5}
                on_press: root.btn()
                
            Spinner:
                id: test2
                text: 'Person 2'
                values: []
                size_hint: (.2, 1)

                pos_hint: {'center_x': 0.65, 'center_y': 0.5}

            Spinner:
                id: test1
                text: 'Person 1'
                values: []
                size_hint: (.2, 1)

                pos_hint: {'center_x': 0.40, 'center_y': 0.5}

            Spinner:
                id: dna
                text: 'mtDNA / Y DNA'
                values: ['mtDNA', 'Y DNA']
                size_hint: (.2, 1)

                pos_hint: {'center_x': 0.15, 'center_y': 0.5}


        GridLayout:
            cols: 3
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas:
                Color:
                    rgba: 0, 1, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6
                canvas:
                    Color:
                        rgba: 0, 1, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1
                Label:
                    text: "Person 2\nName\nTime"
                Label:
                    text: "Shared Ancestor"
                Label:
                    text: "Shared Connection"

            Label:
                size_hint_x: 1.1
                canvas:
                    Color:
                        rgba: 0, 1, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1
                text: "Description"

            Image:
                size_hint_x: 0.7
                canvas:
                    Color:
                        rgba: 0, 1, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1
                source: 'seiko_lede-2880x1620.jpg'
                size_hint: 1 ,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        GridLayout:
            cols: 1
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            canvas:
                Color:
                    rgba: 0, 0, 1, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1

            Label:
                text: "Timeline"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 1, 'center_y': 1}

            Image:
                source: 'seiko_lede-2880x1620.jpg'
                size_hint: 1 ,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
